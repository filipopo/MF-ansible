{% extends 'base.html.twig' %}

{% block title %}Guides{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/guides.css') }}">
{% endblock %}

{% block body %}
  <p>Click on a file to read it, for more info visit the Discord server: <a href="https://discord.gg/xPcFh7E">https://discord.gg/xPcFh7E</a></p>
  {% for file in files %}
    <details>
      <summary>{{ file }}</summary>
      <embed style="width: 100%; height: 100vh;" src="{{ asset('guides/' ~ file) }}">
    </details>
  {% endfor %}
{% endblock %}
