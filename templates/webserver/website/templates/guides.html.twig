{% extends 'base.html.twig' %}

{% block title %}Guides{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/guides.css') }}">
{% endblock %}

{% block body %}
  <p>Click on a file to read it, for more info visit the <a href="https://discord.gg/xPcFh7E">Discord server</a></p>
  {% for file in files %}
    <details>
      <summary>{{ file }}</summary>
      <embed src="{{ asset('html/' ~ file) }}">
    </details>
  {% endfor %}
{% endblock %}
